                <TextView
                    android:id="@+id/txtNombre"
                    style="@style/texto_valor_seccion_datos_paciente"
                    android:text="Nombre" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
