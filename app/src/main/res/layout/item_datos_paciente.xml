                <TextView
                    android:id="@+id/txtFecNac"
                    style="@style/texto_valor_seccion_datos_paciente"
                    android:text="Fecha nac" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
