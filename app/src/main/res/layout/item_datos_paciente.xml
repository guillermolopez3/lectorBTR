                <TextView
                    android:id="@+id/txtEdad"
                    style="@style/texto_valor_seccion_datos_paciente"
                    android:text="Edad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/texto_titulo_seccion_datos_pacientes"
