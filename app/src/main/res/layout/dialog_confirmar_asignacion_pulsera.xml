<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="¿Confirmar asignación?"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtNroInternacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nro de internación" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="5">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtNroHabitacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nro habitacíon" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtNroCama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nro de cama" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtMotivoConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Motivo de consulta" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textSize="15sp"
            android:text="Confirma la asignación de la pulsera al paciente:"/>

        <TextView
            android:id="@+id/txtDatosPacienteRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="NN"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RisedButton"
                android:text="Aceptar" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RisedButton"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>